    "version": "2.0.0",
    
    "tasks": [

        {

            "label": "python execute",

            "type": "shell",

            "command": "python",

            "options": {

                "cwd": "${fileDirname}"

            },

            "args": [

                "${file}"

            ],

            "group":{

                "kind": "build",

                "isDefault": true

            },

            "presentation": {

                "echo": true,

                "reveal": "always",

                "focus": false,

                "panel": "shared",

                "showReuseMessage": true,

                "clear": true

            }

        },

 

        {

            "label": "c execute",

            "type": "shell",

            "command": "./${fileBasenameNoExtension}",

            "group":{

                "kind": "test",

                "isDefault": true

            },

            "presentation": {

                "echo": true,

                "reveal": "always",

                "focus": false,

                "panel": "shared",

                "showReuseMessage": true,

                "clear": true

            }

        }

    ]

}